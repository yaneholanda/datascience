import pandas as pd

df = pd.read_csv('pesquisa_de_satisfacao.csv', sep = ';')


df.reset_index()

df.head()

#Média das notas
df.Nota.mean()

#Quantidade de Operadoras
df['Operadora'].nunique()

#As operadoras são:
print(df.drop_duplicates(subset = "Operadora"))

#Os serviços levados em consideração na pesquisa são:
df_sort = df.drop_duplicates(subset = "Serviço")
print(df_sort)

#Iremos trabalhar com o indicador Canais de Atendimento
df_canais = df.query('Indicador=="Canais de Atendimento" ')
df_canais.head()

#Qual o melhor Canal de Atendimento por operadora, de acordo com a pesquisa?
df_canais.sort_values('Nota', ascending=False).head(1)

#Quais as notas dos serviços?
print(df_canais.sort_values(by = ["Nota"], ascending = False))

"""## Iniciando as visualizações gráficas"""

#Vamos utilizar o Matplotlib para obter os gráficos
import seaborn as sns
import matplotlib.pyplot as plt
import folium
sns.set_theme(style="ticks", color_codes=True)

#Visualizando a média de notas recebidas pelas Operadoras em Canais de Atendimento
df_canais.groupby('Operadora').Nota.mean().plot.bar()

#Visualizando a média de notas recebidas pelas Operadoras em todos os indicadores
df.groupby('Operadora').Nota.mean().plot.bar()

#Serviços mais bem avaliados pelos clientes em todos os indicadores
df.groupby('Serviço').Nota.mean().plot.bar()

#Serviços mais bem avaliados pelos clientes em canais de atendimento
df_canais.groupby('Serviço').Nota.mean().plot.bar()

#Analisando a Oi de 2015-2020
df_anos = df_canais.query('Operadora == "Oi"')
fig = plt.figure(figsize=(15, 9))
ax = fig.add_subplot(111)
df_anos.groupby('Operadora').plot(x='Ano', y='Nota', ax=ax, label='Oi', color='green')

#Analisando as operadoras em geral
fig = plt.figure(figsize=(15, 9))
ax = fig.add_subplot(111)
